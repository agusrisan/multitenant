# Test Environment Configuration
# This file is specifically for running tests

# Database Configuration - Test Database
DATABASE_URL=postgres://postgres:password@localhost:5432/multitenant_test
DATABASE_MAX_CONNECTIONS=5
DATABASE_CONNECT_TIMEOUT=3
POSTGRES_VERSION=18

# Server Configuration
HOST=127.0.0.1
PORT=3001

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-minimum-32-characters-long-for-testing
JWT_ACCESS_EXPIRY=900  # 15 minutes in seconds
JWT_REFRESH_EXPIRY=604800  # 7 days in seconds

# Session Configuration
SESSION_SECRET=test-session-secret-key-minimum-32-characters-long-for-testing

# CSRF Protection
CSRF_SECRET=test-csrf-secret-key-minimum-32-characters-long-for-testing

# Environment
RUST_LOG=debug
RUST_ENV=test
